{
    "diagnostic.checkCurrentLine": true,
    "diagnostic.messageTarget": "float",
    "diagnostic.messageDelay": 500,
    "diagnostic.virtualText": false,
    "diagnostic.virtualTextCurrentLineOnly": false,

    "languageserver": {
        "cpp": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
            "args": [],
            "initializationOptions": {}
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
            "filetypes": ["haskell", "lhaskell"]
        }
    },

    "codeLens.enable": false,

    "signature.preferShownAbove": false,

    "elixir.pathToElixirLS": "/usr/local/bin/elixir-ls",

    "python.pythonPath": "python3",
    "python.formatting.provider": "black",

    "coc.preferences.formatOnSaveFiletypes": ["python", "rust", "elixir", "haskell"],

    "inlayHint.refreshOnInsertMode": true,

    "rust.clippy_preference": "on"
}
